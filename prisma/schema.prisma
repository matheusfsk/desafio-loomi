generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  admin
  customer
}

enum OrderStatus {
  received
  in_preparation
  dispatched
  delivered
}

model User {
  id         Int       @id @unique @default(autoincrement())
  name       String
  email      String    @unique
  password   String
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  user_type  UserType
  Customer   Customer?

  @@map("users")
}

model Customer {
  id         Int      @id @unique @default(autoincrement())
  user_id    Int      @unique
  user       User     @relation(fields: [user_id], references: [id])
  full_name  String?
  contact    String?
  address    String?
  status     Boolean
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  Order      Order[]

  @@map("customers")
}

model Product {
  id          Int      @id @unique @default(autoincrement())
  name        String
  description String   @db.VarChar(255)
  price       Decimal
  amount      Int
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now())

  @@map("products")
}

model Order {
  id           Int         @id @unique @default(autoincrement())
  customer_id  Int
  customer     Customer    @relation(fields: [customer_id], references: [id])
  order_status OrderStatus
  created_at   DateTime    @default(now())
  updated_at   DateTime    @default(now())

  @@map("orders")
}
